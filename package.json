{
  "private": true,
  "name": "try-micro-frontends",
  "version": "1.0.0",
  "description": "POC: Micro-frontend app architecture in monorepo with PNPM",
  "engines": {
    "node": ">=18.12",
    "pnpm": "7"
  },
  "scripts": {
    "build": "pnpm --filter \"{apps/*}\" --filter \"{libraries/*}\" build",
    "ci:build": "pnpm --filter \"{apps/*}\" --filter \"{libraries/*}\" ci:build",
    "ci:lint": "pnpm fmt:check && pnpm lint",
    "ci:test": "pnpm test:coverage && pnpm --filter \"{apps/*}\" --filter \"{libraries/*}\" --if-present ci:test",
    "fmt": "prettier --write \"{*,apps/**/*,libraries/**/*,tools/**/*}.+(js|mjs|jsx|css|yml|json)\"",
    "fmt:check": "prettier --check \"{*,apps/**/*,libraries/**/*,tools/**/*}.+(js|mjs|jsx|css|yml|json)\"",
    "lint": "eslint \"{*,apps/**/*,libraries/**/*,tools/**/*}.+(js|mjs|jsx)\"",
    "test:coverage": "jest --coverage",
    "test:unit": "jest",
    "test": "pnpm fmt:check && pnpm lint && pnpm build && pnpm test:coverage"
  },
  "author": "Stefan Cameron",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.23.9",
    "@babel/eslint-parser": "^7.23.10",
    "@babel/eslint-plugin": "^7.23.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.23.4",
    "@babel/plugin-transform-runtime": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "babel-plugin-module-resolver": "^5.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.10.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.8.0",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "lodash-es": "^4.17.21",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.4",
    "typescript": "^5.3.3",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.1"
  }
}
