{
  "private": true,
  "name": "try-micro-frontends",
  "version": "1.0.0",
  "description": "POC: Micro-frontend app architecture in monorepo with PNPM",
  "engines": {
    "node": ">=18.12",
    "pnpm": "7"
  },
  "scripts": {
    "build": "pnpm build:libs && pnpm build:apps",
    "build:apps": "pnpm --filter \"{apps/*}\" build",
    "build:libs": "pnpm --filter \"{libraries/*}\" build",
    "ci:build": "pnpm --filter \"{libraries/*}\" ci:build && pnpm --filter \"{apps/*}\" ci:build",
    "ci:lint": "pnpm lint",
    "ci:test": "pnpm test:coverage && pnpm --filter \"{apps/*}\" --filter \"{libraries/*}\" --if-present ci:test",
    "fmt": "prettier --write \"{*,apps/**/*,libraries/**/*,tools/**/*}.+(js|mjs|jsx|ts|mts|tsx|css|yml|json)\"",
    "fmt:check": "prettier --check \"{*,apps/**/*,libraries/**/*,tools/**/*}.+(js|mjs|jsx|ts|mts|tsx|css|yml|json)\"",
    "lint": "pnpm lint:code && pnpm lint:types && pnpm fmt:check",
    "lint:code": "eslint \"{*,apps/**/*,libraries/**/*,tools/**/*}.+(js|mjs|jsx|ts|mts|tsx)\"",
    "lint:types": "tsc --noEmit",
    "test:coverage": "jest --coverage",
    "test:unit": "jest",
    "test": "pnpm build && pnpm lint && pnpm test:coverage"
  },
  "author": "Stefan Cameron",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.24.0",
    "@babel/eslint-parser": "^7.23.10",
    "@babel/eslint-plugin": "^7.23.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.23.4",
    "@babel/plugin-transform-runtime": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "@reduxjs/toolkit": "^1.9.7",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-typescript": "^11.1.6",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.75",
    "@types/react-dom": "^18.2.24",
    "@types/react-redux": "7.1.9",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "babel-plugin-module-resolver": "^5.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-transform-stub": "^2.0.0",
    "lodash-es": "^4.17.21",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^7.2.0",
    "redux": "^4.0.0",
    "rollup": "^4.13.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-import-css": "^3.5.0",
    "rollup-plugin-terser": "^7.0.2",
    "style-loader": "^3.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.2",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.3"
  }
}
